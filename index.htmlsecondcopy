    <script>
        function wrapLabel(str, maxWidth) {
            if (str.length <= maxWidth) {
                return str;
            }
            const words = str.split(' ');
            let lines = [];
            let currentLine = '';
            for (const word of words) {
                if ((currentLine + word).length > maxWidth) {
                    lines.push(currentLine.trim());
                    currentLine = '';
                }
                currentLine += word + ' ';
            }
            lines.push(currentLine.trim());
            return lines.filter(line => line.length > 0);
        }

        const chartColors = ['#d45087', '#f95d6a', '#ff7c43', '#ffa600'];

        function createChart(chartId, chartData) {
            new Chart(document.getElementById(chartId), {
                type: 'doughnut',
                data: chartData,
                options: {
                    maintainAspectRatio: false,
                    responsive: true,
                    plugins: {
                        legend: {
                            display: true,
                            position: 'bottom',
                            labels: {
                                color: '#ffffff',
                                boxWidth: 10,
                                padding: 15,
                            }
                        },
                        tooltip: {
                            callbacks: {
                                title: function(tooltipItems) {
                                    const item = tooltipItems[0];
                                    let label = item.chart.data.labels[item.dataIndex];
                                    if (Array.isArray(label)) {
                                        return label.join(' ');
                                    }
                                    return label;
                                }
                            }
                        }
                    }
                }
            });
        }

        const profitMarginData = {
            labels: ['Costly Rework & Extra Visits', 'Billing Disputes from Change Orders', 'Slow Invoice-to-Payment Cycle'],
            datasets: [{
                label: 'Profit Margin Leaks',
                data: [40, 35, 25],
                backgroundColor: chartColors,
                borderColor: '#2f4b7c',
                borderWidth: 2,
                hoverOffset: 4
            }]
        };
        createChart('profitMarginChart', profitMarginData);

        const slaComplianceData = {
            labels: ['Penalties for Missed Service Windows', 'Manual SLA Compliance Reporting', 'Reactive Contract Renewals'],
            datasets: [{
                label: 'SLA & Contract Risks',
                data: [45, 30, 25],
                backgroundColor: chartColors,
                borderColor: '#2f4b7c',
                borderWidth: 2,
                hoverOffset: 4
            }]
        };
        createChart('slaComplianceChart', slaComplianceData);

        const assetManagementData = {
            labels: ['No Clear Asset Lifecycle Tracking', 'Inaccurate Quoting on Renewals', 'Wrong Parts Sent with Technicians'],
            datasets: [{
                label: 'Asset & Inventory Gaps',
                data: [50, 25, 25],
                backgroundColor: chartColors,
                borderColor: '#2f4b7c',
                borderWidth: 2,
                hoverOffset: 4
            }]
        };
        createChart('assetManagementChart', assetManagementData);
    </script>

